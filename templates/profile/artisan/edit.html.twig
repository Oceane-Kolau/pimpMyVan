{% extends 'profile/profile_template.html.twig' %}
{% block title %}Modifier mon profil{% endblock %}
{% block content %}
{{ form_start(form) }}
<div class="p-5">
<h4><span class="color-letter">1.</span> Profil</h4>
<div class="row pt-3">
  <div class="col-6">
    {{ form_row(form.firstname) }}
  </div>
  <div class="col-6">
    {{ form_row(form.lastname) }}
  </div>
</div>
<div class="row">
  <div class="col-6">
    {{ form_row(form.email) }}
  </div>
  <div class="col-6">
    {{ form_row(form.phone) }}
  </div>
</div>
<h4 class="mt-4"><span class="color-letter">2.</span> Entreprise</h4>
<div class="row pt-3">
  <div class="col-6">
    {{ form_row(form.instagramLink) }}
  </div>
  <div class="col-6">
    {{ form_row(form.facebookLink) }}
  </div>
</div>
<div class="row">
  <div class="col-6">
    {{ form_row(form.companyName) }}
  </div>
  <div class="col-6">
    {{ form_row(form.websiteLink) }}
  </div>
</div>
<div class="row">
  <div class="col-6">
    {{ form_row(form.specificSetup) }}
  </div>
  <div class="col-6">
    {{ form_row(form.generalSetup) }}
  </div>
</div>
<div class="row">
  <div class="col-12">
    {{ form_row(form.specialtiesVanArtisan, {
    "attr": {
    'class': 'selectpicker',
    'data-live-search': true,
    'data-count-selected-text': '{0} sélectionné(s)',
    'data-actions-box': true,
    'title': 'Sélectionner'

    }}) }}
  </div>
</div>
<div class="row">
  <div class="col-6">
    <p>
      Vous acceptez que les Vanlifers remplissent une description
      détaillée de leur projet en vous contactant
    </p>
  </div>
  <div class="col-6">
    {{
    form_row(form.acceptQuote, { attr: { class: "choice-design" } })
    }}
  </div>
</div>
<div class="row">
  <div class="col m-12">
    {{ form_row(form.description) }}
  </div>
</div>
<div class="col m-12">
  {{ form_row(form.profilePictureFile) }}
</div>
<div class="col m-12">
  {{ form_row(form.pictureFile) }}
</div>
<div class="col m-12">
  {{ form_row(form.bannerFile) }}
</div>
</div>
<div class="text-center pt-3">
  <button class="btn btn-turquoise">
    {{ button_label|default('Enregistrer') }}
  </button>
</div>
{{ form_end(form) }}
</div>
<div class="col-11 text-left pr-5 pt-5">
  <a class="hover-link" href="{{
            path('artisan_profile', { slug: artisan.slug, id: artisan.id })
          }}">
    <p><i class="fas fa-arrow-left"></i> Retour à mon profil</p>
  </a>
</div>
{% endblock %}
{% block javascripts %}
<script src="https://code.jquery.com/jquery-3.2.1.min.js"
  integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js"
  integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
<script>
  $(".custom-file-input").on("change", function (event) {
    var inputFile = event.currentTarget;
    $(inputFile)
      .parent()
      .find(".custom-file-label")
      .html(inputFile.files[0].name);
  });
</script>
{% endblock javascripts %}