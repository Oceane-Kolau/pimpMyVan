            <div class="col-6">
                {{ form_row(form.generalSetup,
                { 'attr': {'class': 'choice-design'} }) }}
            </div>
        </div>
    </div>
    <div class="col-12">
        {{ form_row(form.specialtiesVanArtisan, {
        "attr": {
        'class': 'selectpicker',
        'data-live-search': true,
        'data-count-selected-text': '{0} sélectionnés',
        'data-actions-box': true,
        'title': 'Aménagements'
        }}) }}
    </div>
