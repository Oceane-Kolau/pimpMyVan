{{ form_start(form, {
"attr": {
'class': 'choice-design'}}) }}
<div class="row">
    <div class="col-12">
        {{ form_row(form.title,
        { 'attr': {'class': 'choice-design'} }) }}
    </div>
    <div class="col-12">
        <div class="row">
            <div class="col-6">
                {{ form_row(form.yearVan,
                { 'attr': {'class': 'choice-design'} }) }}
            </div>
            <div class="col-6">
                {{ form_row(form.brandVan,
                { 'attr': {'class': 'choice-design'} }) }}
            </div>
        </div>
    </div>
    <div class="col-12">
        <div class="row">
            <div class="col-6">
                {{ form_row(form.sizeVan,
                { 'attr': {'class': 'choice-design'} }) }}
            </div>
            <div class="col-6">
                {{ form_row(form.typeVan,
                { 'attr': {'class': 'choice-design'} }) }}
            </div>
        </div>
    </div>
    <div class="col-12">
        <div class="row">
            <div class="col-6">
                {{ form_row(form.floor,
                { 'attr': {'class': 'choice-design'} }) }}
            </div>
            <div class="col-6">
                {{ form_row(form.kilometerVan,
                { 'attr': {'class': 'choice-design'} }) }}
            </div>
        </div>
    </div>
    <div class="col-12">
        {{ form_row(form.insulation, {
        "attr": {
        'class': 'selectpicker',
        'data-live-search': true,
        'data-count-selected-text': '{0} sélectionnés',
        'data-actions-box': true,
        'title': 'Isolation'
        }}) }}
    </div>
    <div class="col-12">
        {{ form_row(form.veneer, {
        "attr": {
        'class': 'selectpicker',
        'data-live-search': true,
        'data-count-selected-text': '{0} sélectionnés',
        'data-actions-box': true,
        'title': 'Placage'
        }}) }}
    </div>
    <div class="col-12">
        <div class="row">
            <div class="col-6">
                {{ form_row(form.specificSetup,
                { 'attr': {'class': 'choice-design'} }) }}
