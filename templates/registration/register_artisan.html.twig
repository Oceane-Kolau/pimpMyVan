{% extends 'base.html.twig' %}
{% block title %}Inscription Aménageur{% endblock %}
{% block stylesheets %}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css">
{% endblock %}
{% block body %}
<div class="wrapper">
  {% include "asidenav.html.twig" %}
  <div id="page-content-wrapper">
    <div class="container-fluid">
      <div class="row align-items-center">
        <div class="col-xl-8 col-lg-8 col-md-12 col-xs-12">
          <div class="jumbotron m-5">
            {% for flashError in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
            {% endfor %}
            <h1 class="color-connexion">Inscription</h1>
            {{ form_start(registrationForm) }}
            <h4 class="color-connexion mt-4"><span class="color-letter">1.</span> Informations personnelles</h4>
            <div class="row">
              <div class="col-6">
                {{ form_row(registrationForm.firstname) }}
              </div>
              <div class="col-6">
                {{ form_row(registrationForm.lastname) }}
              </div>
            </div>
            <div class="row">
              <div class="col-6">
                {{ form_row(registrationForm.email) }}
              </div>
              <div class="col-6">
                {{ form_row(registrationForm.town) }}
              </div>
            </div>
            <h4 class="color-connexion mt-4"><span class="color-letter">2.</span> Entreprise</h4>
            <div class="row">
              <div class="col-6">
                {{ form_row(registrationForm.instagramLink) }}
              </div>
              <div class="col-6">
                {{ form_row(registrationForm.facebookLink) }}
              </div>
            </div>
            <div class="row">
              <div class="col-6">
                {{ form_row(registrationForm.companyName) }}
              </div>
              <div class="col-6">
                {{ form_row(registrationForm.websiteLink) }}
              </div>
            </div>
            <div class="row">
              <div class="col-6">
                {{ form_row(registrationForm.specificSetup) }}
              </div>
              <div class="col-6">
                {{ form_row(registrationForm.generalSetup) }}
              </div>
            </div>
            <div class="col-12">
              {{ form_row(registrationForm.specialtiesVanArtisan, {
              "attr": {
              'class': 'selectpicker',
              'data-live-search': true,
              'data-count-selected-text': '{0} sélectionnés',
              'data-actions-box': true,
              'title': 'Sélectionner'
              }}) }}
            </div>
            <h4 class="color-connexion mt-4"><span class="color-letter">3.</span> Dernière étape !</h4>
            {{ form_row(registrationForm.plainPassword) }}
            {{ form_row(registrationForm.agreeTerms) }}
            <div class="row">
              <div class="col-12 pb-3 text-right">
                <p>* Champs obligatoires</p>
              </div>
            </div>
            <div class="text-center">
              <button type="submit" class="btn btn-inscription">S'inscrire</button>
            </div>
            {{ form_widget(registrationForm._token) }}
            {{ form_end(registrationForm, {'render_rest': false}) }}
          </div>
        </div>
        <div class="col-4 d-none d-md-block">
          <img src="https://i.postimg.cc/L5ydgXTB/undraw-Hire-re-gn5j-2.png" class="img-fluid">
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
{% block javascripts %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.18/js/bootstrap-select.min.js"
  integrity="sha512-yDlE7vpGDP7o2eftkCiPZ+yuUyEcaBwoJoIhdXv71KZWugFqEphIS3PU60lEkFaz8RxaVsMpSvQxMBaKVwA5xg=="
  crossorigin="anonymous"></script>
{% endblock %}