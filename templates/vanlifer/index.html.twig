{% extends 'base.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block body %}
<div class="wrapper">
    {% include "asidenav.html.twig" %}
    <div id="page-content-wrapper">
        <div class="container-fluid color-account">
            <div class="row mb-4">
                <div class="col-2">
                    <a class="navbar-brand ml-5 pl-5" href="/">
                        {% include 'logoSvg.html.twig' %}
                    </a>
                </div>
                {% include 'vanlifer/presentation_vanlifer.html.twig' with {vanlifer: vanlifer} only %}
                {% include 'vanlifer/nav_vanlifer.html.twig' with {vanlifer: vanlifer} only %}
                <div class="col-11 text-right pr-5 pt-5">
                    <a class="hover-link" href="{{ path('vanlifer_edit', {'slug': app.user.slug, 'id': vanlifer.id}) }}">
                        <p></i>Editer mon profil <i class="fas fa-arrow-right"></i></p>
                    </a>
                </div>
                <div class="row justify-content-around align-items-center">
                    <div class="col-xl-8 col-lg-8 col-md-7 col-sm-12 mr-5 bg-lightgrey mx-auto">
                        {% if vanlifer.description is not empty %}
                        <div class="col-12">
                            <p class="p-2"> {{ vanlifer.description }}</p>
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}