{% extends 'base.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block body %}
<div class="wrapper">
    {% include "asidenav.html.twig" %}
    <div id="page-content-wrapper">
        <div class="container-fluid color-account">
            <div class="row mb-4">
                <div class="col-2">
                    <a class="navbar-brand ml-5 pl-5" href="/">
                        {% include 'logoSvg.html.twig' %}
                    </a>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12 text-center">
                    <img src="{{ vich_uploader_asset(vanlifer, 'profilePictureFile') }}"
                        class="img-fluid size-img-account" alt="">
                    <h3 class="mt-3">{{ vanlifer.firstname }} {{ vanlifer.lastname }}</h3>
                    <div class="row align-items-center justify-content-center mt-3">
                        {% if vanlifer.instagramLink is not empty %}
                        <div class="col-lg-1 col-md-1 col-sm-auto">
                            <a target="_blank" href="{{ vanlifer.instagramLink }}">
                                <p><i class="fab fa-instagram rs-color"></i></p>
                            </a>
                        </div>
                        {% endif %}
                        {% if vanlifer.websiteLink is not empty %}
                        <div class="col-lg-1 col-md-1 col-sm-auto">
                            <a target="_blank" href="{{ vanlifer.websiteLink }}">
                                <p class="rs-color"><i class="fas fa-globe"></i></p>
                            </a>
                        </div>
                        {% endif %}
                        {% if vanlifer.facebookLink is not empty %}
                        <div class="col-lg-1 col-md-1 col-sm-auto">
                            <a target="_blank" href="{{ vanlifer.facebookLink }}">
                                <p><i class="fab fa-facebook-square rs-color"></i></p>
                            </a>
                        </div>
                        {% endif %}
                    </div>
                    <div class="row align-items-center justify-content-center mt-3">
                        {% if vanlifer.companyName is not empty %}
                        <div class="col-auto">
                            <p> {{ vanlifer.companyName }}</p>
                        </div>
                        {% endif %}
                        <div class="col-auto">
                            <p> {{ vanlifer.email }}</p>
                        </div>
                        {% if vanlifer.phone is not empty %}
                        <div class="col-auto">
                            <p><i class="fas fa-phone-alt"></i> {{ vanlifer.phone }}</p>
                        </div>
                        {% endif %}
                    </div>
                    <div class="row justify-content-around align-items-center">
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 text-center ml-4">
                            <a href="{{ path('vanlifer_profile') }}">
                                <button type="button" class="btn btn-lg btn-grey m-3">Profil</button>
                            </a>
                            <a href="{{ path('vanlifer_profile') }}">
                                <button type="button" class="btn btn-lg btn-grey m-3">Annonces</button>
                            </a>
                            <a href="{{ path('vanlifer_profile')}}">
                                <button type="button" class="btn btn-lg btn-grey m-3">Messages</button>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row justify-content-around align-items-center">
                <div class="col-xl-2 col-lg-2 col-md-2 col-sm-12 text-center ml-4">
                    <a href="{{ path('artisan_profile', {'id': artisan.id}) }}">
                        <button type="button" class="btn btn-lg btn-grey m-3">Profil</button>
                    </a>
                    <a href="{{ path('artisan_profile', {'id': artisan.id}) }}">
                        <button type="button" class="btn btn-lg btn-grey m-3">Messages</button>
                    </a>
                    <a href="{{ path('artisan_profile', {'id': artisan.id}) }}">
                        <button type="button" class="btn btn-lg btn-grey m-3">Devis</button>
                    </a>
                </div>
                <div class="col-xl-8 col-lg-8 col-md-7 col-sm-12 mr-5 bg-lightgrey mx-auto p-5">
                    {% for contact in contacts|reverse %}
                    <div class="row justify-content-around align-items-center">
                        <div class="col-auto">
                            <p>{{ contact.firstname }} {{ contact.lastname }}</p>
                        </div>
                        <div class="col-auto d-none d-sm-block">
                            <p>{{ contact.subject }}</p>
                        </div>
        
                        <div class="col-auto">
                            <p>{{ contact.createdAt|date('d M Y')}}</p>
                        </div>
                            <a href="{{ path('vanlifer_messagerie_show', {'id': contact.id}) }}"><button class="btn btn-turquoise"><i class="far fa-eye"></i></button></a></td>
                    </div>
                    <hr>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}