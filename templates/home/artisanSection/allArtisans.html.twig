{% extends 'home_template.html.twig' %}
{% block title %}{% endblock %}

{% block home %}
<div class="container-fluid pb-5">
    <div class="row mt-5">
        <div class="col-xl-3 col-lg-5 col-md-5 col-sm-10 pt-3">
            <div class="">
            <div class="filter p-5">
                {{form_start(searchForm)}}
                <div class="pl-2 pt-2">
                    {{form_row(searchForm.q)}}
                    <hr>
                    <h4>Aménagements</h4>
                    {{ form_row(searchForm.generalSetup)}}
                    {{ form_row(searchForm.specificSetup)}}
                    <hr>
                    <h4>Options</h4>
                    {{ form_row(searchForm.specialtiesVanArtisan)}}
                    <hr>
                    <h4>A proximité de...</h4>
                    {{ form_row(searchForm.region)}}
                    <hr>
                </div>
                <div class="text-center pb-3 pt-3">
                    <button type="submit" class="btn btn-lg btn-turquoise"> Rechercher</button>
                </div>
                {{form_end(searchForm)}}
            </div>
        </div>
        </div>
        <div class="col-xl-9 col-lg-6 col-md-7 col-sm-10">
            <div class="container-fluid">
                <div class="row mx-auto">
                    {% for artisan in artisans %}
                    {% include 'home/artisanSection/artisans_card.html.twig' with {artisan: artisan} only %}
                    {% endfor %}
                </div>
                <div class="navigation">
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}