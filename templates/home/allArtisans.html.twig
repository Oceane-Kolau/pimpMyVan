{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
{% include "navbar.html.twig" %}
<div class="container-fluid pb-5 mx-auto">
    <div class="row mt-5 mx-auto">
        <div class="col-xl-3 col-lg-4 col-md-5 col-sm-10 card-filter pt-3">
            <div class="filter p-5">
                {{form_start(searchForm)}}
                <div class="pl-2 pt-2">
                    {{form_row(searchForm.q)}}
                    <hr>
                    <h4>Aménagements</h4>
                    {{ form_row(searchForm.generalSetup)}}
                    {{ form_row(searchForm.specificSetup)}}
                    <hr>
                    <h4>Options</h4>
                    {{ form_row(searchForm.specialtiesVanArtisan)}}
                    <hr>
                    <h4>A proximité de...</h4>
                    {{ form_row(searchForm.town)}}
                    <hr>
                </div>
                <div class="text-center pb-3 pt-3">
                    <button type="submit" class="btn btn-lg btn-turquoise"> Rechercher</button>
                </div>
                {{form_end(searchForm)}}
            </div>
        </div>
        <div class="col-lg-7 col-lg-7 col-md-7 col-sm-10">
            <div class="container-fluid">
                <div class="row mx-auto">
                    {% for artisan in artisans %}
                    {% include 'home/artisans_card.html.twig' with {artisan: artisan} only %}
                    {% endfor %}
                </div>
                <div class="navigation">
                </div>
            </div>
        </div>
    </div>
</div>
<div class="hr-expert"><hr></div>
{% endblock %}

