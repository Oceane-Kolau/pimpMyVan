<div class="col-xl-9 col-lg-6 col-md-7 col-sm-10">
    <div class="container-fluid">
        <div class="row mx-auto">
            {% for adsVan in adsVans %}
            <div class="col-xl-5 col-lg-6 col-md-7 col-sm-12 my-4 d-flex">
                <div class="card">
                    <a href="{{path ('home_adsVan_show', {'slug': adsVan.slug})}}" class="link-for-show-img">
                    </a>
                    <div class="text-right color-provider mr-3">
                        <button class="btn border-pres pl-3 pr-3">
                            <p>

                            </p>
                        </button>
                    </div>
                    <div class="card-body">
                        <a href="{{path ('home_adsVan_show', {'slug': adsVan.slug})}}" class="link-for-show">
                            <h2 class="name">
                                {{adsVan.title}}
                            </h2>
                        </a>
                        <div class="text-left">
                            <div class="row pl-3">
                                {% for specificSetup in adsVan.specificSetup %}
                                <div class="col-auto">
                                    <p class="size-specialties"><i class="fas fa-plus plus-color-card"></i> {{
                                        specificSetup.type }}</p>
                                </div>
                                {% endfor %}
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
    {# On crée des variables personnalisées #}
    {% set queryParams = app.request.query.all %}
    {% set queryString = queryParams|filter((v, k) => k != "page" and k != "ajax")|url_encode %}


    <ul class="pagination">
        <li class="{{ (page == 1) ? 'disabled' : '' }}">
            <a href="?page=1&{{queryString}}">
                <i class="fas fa-step-backward"></i>
            </a>
        </li>
        <li class="{{ (page == 1) ? 'disabled' : '' }}">
            <a href="{{ (page > 1) ? '?page=' ~ (page - 1) : '' }}&{{queryString}}">
                <i class="fas fa-angle-left"></i>
            </a>
        </li>
        {% set pages = (total / limit)|round(0, 'ceil') %}
        {% for item in 1..pages %}
        <li class="{{ (page == item) ? 'active' : '' }}">
            <a href="?page={{ item }}&{{queryString}}">{{ item }}</a>
        </li>
        {% endfor %}
        <li class="{{ (page == pages) ? 'disabled' : '' }}">
            <a href="{{ (page < pages) ? '?page=' ~ (page + 1) : '' }}&{{queryString}}">
                <i class="fas fa-angle-right"></i>
            </a>
        </li>
        <li class="{{ (page == pages) ? 'disabled' : '' }}">
            <a href="?page={{ pages }}&{{queryString}}">
                <i class="fas fa-step-forward"></i>
            </a>
        </li>
    </ul>
</div>